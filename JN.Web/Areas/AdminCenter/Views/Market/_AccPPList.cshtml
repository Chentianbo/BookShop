
@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<JN.Data.AcceptHelp>
<table id="acceptlist" class="table table-striped table-bordered table-hover datalist" width="100%">
    <thead>
        <tr>
            <th style="text-align:center" >
                <label onclick="accept()">
                    <input type="checkbox" id="ckaidchecked" class="ace" />
                    <span class="lbl"></span>
                </label>
            </th>
            <th>
                编号
            </th>
            <th>参与者</th>
            <th>金额</th>
            <th>排队</th>
            <th>余额</th>
            <th style="width:80px">
                申请时间
            </th>
        </tr>
    </thead>
    <tbody>
        @{
           foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        <label>
                            <input type="checkbox"  onclick="acceptamount()" class="ace" name="ckaid" data-value="@(item.ExchangeAmount - item.HaveMatchingAmount)" value="@item.ID" />
                            <span class="lbl"></span>
                        </label>
                    </td>
                    <td>@item.AcceptNo @(item.IsTop ? "顶" : "")&nbsp;@(item.IsRepeatQueuing ? "重" : "")</td>
                    <td>@item.UserName</td>
                    <td>@item.ExchangeAmount</td>
                    <td>@(JN.Services.Tool.DateTimeDiff.DateDiff(item.CreateTime, DateTime.Now, "d") + 1)天</td>
                    <td>@(item.ExchangeAmount - item.HaveMatchingAmount)</td>
                    <td>
                        @item.CreateTime.ToString("MM-dd HH:mm")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="row">
    <div class="col-xs-8" style="margin: 0px 0 0 20px;">
        @Ajax.Pager(Model, new Webdiyer.WebControls.Mvc.PagerOptions
   {
       PageIndexParameterName = "AcceptHelpPage",
       FirstPageText = "<<",
       LastPageText = ">>",
       NextPageText = ">",
       PrevPageText = "<",
       ContainerTagName = "ul",
       NumericPagerItemCount = 5,
       CssClass = "pagination",
       CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"javascript:;\">{0}</a></li>",
       DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
       PagerItemTemplate = "<li>{0}</li>",
       PageIndexBoxId = "pageIndexBox1",
   },
              new MvcAjaxOptions { UpdateTargetId = "_AccPPList", HttpMethod = "Post", DataFormId = "_Form_AcceptHelp" }).Options(o => o.AddRouteValue("target", "AcceptHelp"))
 
  @if (Model.Count > 0)
{
  

    <div class="group_right">
        <div class="input-group" style="margin:20px 0">
            <span class="input-group-addon">转到第</span>
            <select id="pageIndexBox1" class="form-control" style="width:80px;"></select>
            <span class="input-group-addon">页</span>
        </div>
    </div>

}   </div>
</div>

