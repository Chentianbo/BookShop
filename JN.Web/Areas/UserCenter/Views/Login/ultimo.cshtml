<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@MvcCore.Unity.Get<JN.Data.Service.ISysSettingService>().Single(1).SiteTitle</title>
    <meta name="ROBOTS" content="NOINDEX, NOFOLLOW" />
    <link href="/theme/ultimo/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="/theme/ultimo/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/theme/ultimo/css/animate.css" rel="stylesheet" type="text/css" />
    <link href="/theme/ultimo/css/admin.css" rel="stylesheet" type="text/css" />
</head>
<body class="light_theme  fixed_header left_nav_fixed">
    <div class="wrapper">
        <!--\\\\\\\ wrapper Start \\\\\\-->
        <div class="login_page">
            <div class="login_content">
                <div class="panel-heading border login_heading">现在登录</div>
                <div class="form-horizontal">
                    <div class="form-group">

                        <div class="col-sm-10">
                            <input type="text" placeholder="请输入用户名" name="username" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-10">
                            <input type="password" placeholder="请输入登录密码" name="password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" style="width:120px; margin-right:8px" class="form-control" placeholder="验证码" name="code" />
                                <img id="imgCode" src="/User/Login/GetCodeImage?id=1" onclick="ChangeCheckCode();return false;" style="border:none; height:32px" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-sm-10">
                            <div class="checkbox checkbox_margin">
                                <label class="lable_margin">
                                    <input type="checkbox" /><p class="pull-left"> 记住登录状态</p>
                                </label>
                                <button class="btn btn-default pull-right" id="btnlogin">登 录</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!--\\\\\\\ wrapper end\\\\\\-->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Compose New Task</h4>
                </div>
                <div class="modal-body"> content </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Compose New Task</h4>
                </div>
                <div class="modal-body"> sgxdfgxfg </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/theme/ultimo/js/jquery-2.1.0.js"></script>
    <script src="/theme/ultimo/js/bootstrap.min.js"></script>
    <script src="/theme/ultimo/js/common-script.js"></script>
    <script src="/theme/ultimo/js/jquery.slimscroll.min.js"></script>


    <script type="text/javascript">
        function ChangeCheckCode() {
            var oldUrl = $('#imgCode').attr("src");
            $('#imgCode').attr("src", oldUrl + '1');
        }

        jQuery(function ($) {
            $('#btnlogin').on('click', function () {
                loginSubmit();
            });
        });

        function loginSubmit() {
            var name = $("input[name='username']").val();
            var pwd = $("input[name='password']").val();
            var lang = $("select[name='lang']").val();
            var code = $("input[name='code']").val();
            var gourl = "/User/Login";
            $.post(gourl, { username: name, password: pwd, lang: lang, code: code }, function (response) {
                if (response.status == "ok") {
                    window.location.href = response.data;
                } else {
                    if (response.status == "errcode")
                        ChangeCheckCode();
                    alert(response.data);
                }
            });
        }

        if (document.addEventListener) {//如果是Firefox
            document.addEventListener("keypress", fireFoxHandler, true);
        } else {
            document.attachEvent("onkeypress", ieHandler);
        }
        function fireFoxHandler(evt) {
            //alert("firefox");
            if (evt.keyCode == 13) {
                loginSubmit();
            }
        }
        function ieHandler(evt) {
            //alert("IE");
            if (evt.keyCode == 13) {
                loginSubmit();
            }
        }
    </script>
</body>
</html>
