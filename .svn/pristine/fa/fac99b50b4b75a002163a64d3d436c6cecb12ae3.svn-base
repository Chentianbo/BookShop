@using Webdiyer.WebControls.Mvc
@using System.Data
@model PagedList<System.Data.DataRow>
@{
    Layout = "~/Areas/UserCenter/Views/Shared/_Layout" + JN.Services.Tool.ConfigHelper.GetConfigString("Theme") + ".cshtml";
}
    <!-- PAGE CONTENT BEGINS -->
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div id="sample-table-1_wrapper" class="dataTables_wrapper" role="grid">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover no-margin-bottom">
                        <thead>
                            <tr>
                                <th class="center">
                                </th>
                                <th><i class="icon-time bigger-110 hidden-480"></i>@T("时间")</th>
                                <th>@T("销售奖")</th>
                                <th>@T("广告奖")</th>
                                <th>@T("管理奖")</th>
                                @*<th>代数奖</th>*@
                                <th>
                                    @T("津贴")
                                </th>
                                <th>
                                    @T("银币总计")
                                </th>
                                <th>
                                    @T("金币总计")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td align="center" style="color:#999">
                                            @(i + 1)
                                        </td>
                                        <td>
                                            @Model[i]["jstime"]
                                        </td>
                                        <td>
                                            @Model[i]["tjj"]
                                        </td>
                                        <td>
                                            @Model[i]["jthl"]
                                        </td>
                                        <td>
                                            @Model[i]["ldfh"]
                                        </td>
                                        @*<td class="hidden-480">@Model[i]["dpj"]</td>*@
                                        <td>
                                            @Model[i]["jt"]
                                        </td>
                                        <td>
                                            @((Convert.ToDecimal(Model[i]["total"]) * Convert.ToDecimal(JN.BLL.sysparams.GetModel(2002).Value)).ToString("F2"))
                                        </td>
                                        <td>
                                            @((Convert.ToDecimal(Model[i]["total"]) - (Convert.ToDecimal(Model[i]["total"]) * Convert.ToDecimal(JN.BLL.sysparams.GetModel(2004).Value))).ToString("F2"))
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!--S 翻页页码  -->
                @Html.NoticePager(Model.CurrentPageIndex, Model.TotalItemCount, Model.PageSize)
                <!--E 翻页页码  -->

            </div><!-- /.table-responsive -->
        </div><!-- /span -->
    </div><!-- /row -->
    <!-- PAGE CONTENT ENDS -->

