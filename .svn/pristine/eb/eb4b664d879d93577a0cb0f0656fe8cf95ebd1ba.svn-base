                    <p>
                        @MvcHtmlString.Create(Model.Content)
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Attachment))
                    {
                        <p>
                            <div class="breadcrumb" data-ng-show="breadcrumbs.length">
