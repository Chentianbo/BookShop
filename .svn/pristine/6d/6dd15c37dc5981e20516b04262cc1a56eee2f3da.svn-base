<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    function afterPost(data) {
        $('#btn').attr('disabled', "true");
        if (data.Status == 200) {
            alert("转账成功，即将为您跳转页面!");
            location.reload();
        } else {
            alert("转账失败！错误信息：" + data.Message);
            $('#btn').removeAttr("disabled");
        }
    }
