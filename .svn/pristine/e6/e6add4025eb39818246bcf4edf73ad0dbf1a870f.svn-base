        </div>
    </div>    
    <div class="mainoprate">
        <div class="table-responsive">
            <div class="bodylist">
                <p>@T(cacheSysParam.SingleAndInit(x => x.ID == 2001).Value + "记录")</p>
                @using (Ajax.BeginForm("Wallet", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "_Wallet2001", InsertionMode = InsertionMode.Replace, HttpMethod = "get" }, new RouteValueDictionary { { "id", "_WalletForm2001" } }))
            {
                     <div class="searchbar">
                    <div class="input-group col-sm-8 no-padding-left" style="width:2%;float:right;margin-bottom:5px;padding-right:10px;">
                        <input type="text" id="wallet2001s" name="wallet2001s" style="width:250px" class="form-control search-query" placeholder="@T("请输入要查询的关键字")" />
                        <input type="hidden" name="target" value="Wallet2001" />
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-purple btn-sm">
                                @T("查询")
                                <i class="icon-search icon-on-right bigger-110"></i>
                            </button>
                        </span>
                    </div>
                         </div>
            }
